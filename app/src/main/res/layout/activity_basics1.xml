<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrndclr"
    tools:context=".basics1">

    <RelativeLayout
        android:id="@+id/homewindowhead"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@null">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/homewindowbody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_below="@id/homewindowhead">

        <RelativeLayout
            android:id="@+id/question1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Select the boy"
                android:layout_alignParentStart="true"
                android:textSize="35dp"
                android:textColor="@color/Black"
                android:fontFamily="serif"
                android:layout_centerInParent="true">

            </TextView>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/homewindowcontent3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@id/question1"
            android:layout_marginLeft="40dp">

            <ImageView
                android:id="@+id/q1boyimg"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/boy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q1boyimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="le garÃ§on"
                android:fontFamily="serif"
                android:textColor="@color/Black"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homewindowcontent4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@id/question1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp">

            <ImageView
                android:id="@+id/q1girlimg"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/girl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q1girlimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="la fille"
                android:fontFamily="serif"
                android:textColor="@color/Black"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homewindowcontent5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@id/homewindowcontent3"
            android:layout_marginLeft="40dp">

            <ImageView
                android:id="@+id/q1womanimg"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/woman"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q1womanimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="le femme"
                android:fontFamily="serif"
                android:textColor="@color/Black"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homewindowcontent6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@id/homewindowcontent4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp">

            <ImageView
                android:id="@+id/q1manimg"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/man"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/q1manimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="l'homme"
                android:fontFamily="serif"
                android:textColor="@color/Black"
                android:textStyle="bold"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>